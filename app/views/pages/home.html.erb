<div class="container mt-3">
  <h1>Hello there</h1>
  <%= simple_form_for :user, url: root_path do |f| %>
    <%= f.input :name, as: :string, required: false %>
    <%= f.input :age, as: :string, required: false %>
    <%= f.input :address, as: :string, placeholder:'test', required: false %>
    <%= f.submit 'hello', class: 'btn btn-primary' %>
  <% end %>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
